<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoteThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="background_color">@color/light_background</item>
        <item name="card_background_color">@color/light_card_background</item>
        <item name="primary_text_color">@color/light_card_primary_text_color</item>
        <item name="secondary_text_color">@color/light_card_secondary_text_color</item>

    </style>

    <style name="NoteThemeDark" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="background_color">@color/dark_background</item>
        <item name="card_background_color">@color/dark_card_background</item>
        <item name="primary_text_color">@color/dark_card_primary_text_color</item>
        <item name="secondary_text_color">@color/dark_card_secondary_text_color</item>

    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow and the overflow button! -->
        <item name="colorControlNormal">@color/material_black</item> <!-- sets the color for the back arrow -->
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyle</item> <!-- sets the style for the overflow button -->
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/material_black</item>
    </style>

    <!--<style name="menu_labels_style">-->
        <!--<item name="android:background">@drawable/fab_label_background</item>-->
        <!--<item name="android:textColor">@color/black</item>-->
    <!--</style>-->
    <!---->

    <!--End of NoteTheme-->



    <style name="NotefyLightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="background_color">@color/light_background</item>
        <item name="card_background_color">@color/light_card_background</item>
        <item name="primary_text_color">@color/light_card_primary_text_color</item>
        <item name="secondary_text_color">@color/light_card_secondary_text_color</item>
    </style>

    <style name="NotefyDarkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="background_color">@color/dark_background</item>
        <item name="card_background_color">@color/dark_card_background</item>
        <item name="primary_text_color">@color/dark_card_primary_text_color</item>
        <item name="secondary_text_color">@color/dark_card_secondary_text_color</item>
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/material_black</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionBarStyle">@style/Notefy.ActionBarStyle</item>
    </style>

    <style name="Notefy.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="colorControlNormal">@color/material_black</item>
        <item name="actionOverflowButtonStyle">@style/overflowButtonStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="overflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/material_black</item>
    </style>

</resources>
